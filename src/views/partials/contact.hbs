<div  id="contact-form-messages"></div>
<form id="contact-form" method="post" role="form">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <fieldset>
  <div class="field perspective">
    <label class="title" for="name">Name</label>
    <input name="name" type="text" placeholder="Your name" required="required">
  </div>
  <div class="field perspective">
    <label class="title" for="email">Email</label>
    <input name="email" type="text" placeholder="Your email" required="required">
  </div>
  <div class="field perspective">
    <label class="title" for="message">Message</label>
    <textarea name="message" placeholder="Enter your message here" rows="3" required="required"></textarea>
  </div>
  <div class="field perspective">
    <button id="contact-form-submit-btn" name="submit" type="submit">Submit</button>
  </div>
  </fieldset>
</form>
